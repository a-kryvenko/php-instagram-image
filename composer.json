{
    "name": "antey/instagram-image",
    "description": "Library for resizing images according to instagram requirements",
    "keywords": ["php", "instagram", "image", "resize", "gallery", "stories", "reels", "autoscale"],
    "homepage": "https://github.com/a-kryvenko/php-instagram-image",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Antey\\InstagramImage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Antey\\InstagramImage\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Andriy Kryvenko",
            "homepage": "https://a-krivenko.com/"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "ext-gd": "*",
        "ext-fileinfo": "*",
        "gumlet/php-image-resize": "2.0.*",
        "antey/image-slice": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2",
        "php-coveralls/php-coveralls": "^2.5"
    }
}
